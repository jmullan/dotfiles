#!/bin/bash
#
# ANSI color scheme script featuring Space Invaders
#
# Original: http://crunchbanglinux.org/forums/post/126921/#p126921
# Modified by lolilolicon
#

i01=" â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„ "
i02="â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ"
i03="â–€â–€â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆâ–€â–€"
i04="  â–Œâ–Œâ–Œâ–Œâ–Œâ–Œâ–Œâ–Œ  "
i11="  â–€â–„    â–„â–€  "
i12=" â–„â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆâ–„ "
i13="â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆ"
i14="â–€ â–€â–„â–„  â–„â–„â–€ â–€"
i21=" â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„ "
i22="â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ"
i23="â–€â–€â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆâ–€â–€"
i24=" â–€â–ˆâ–„ â–€â–€ â–„â–ˆâ–€ "
i31="    â–„â–ˆâ–ˆâ–„    "
i32="  â–„â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–„  "
i33="  â–€â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–€  "
i34="  â–„â–€â–„â–€â–€â–„â–€â–„  "
i41="    â–„â–ˆâ–ˆâ–„    "
i42="  â–„â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–„  "
i43="  â–€â–ˆâ–€â–ˆâ–ˆâ–€â–ˆâ–€  "
i44="  â–€â–„    â–„â–€  "
i51="â–„ â–€â–„    â–„â–€ â–„"
i52="â–ˆâ–„â–ˆâ–€â–ˆâ–ˆâ–ˆâ–ˆâ–€â–ˆâ–„â–ˆ"
i53="â–€â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–€"
i54=" â–„â–€      â–€â–„ "
i61=" â–„â–„â–„â–ˆâ–ˆâ–ˆâ–ˆâ–„â–„â–„ "
i62="â–ˆâ–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–ˆ"
i63="â–€â–€â–€â–ˆâ–ˆâ–€â–€â–ˆâ–ˆâ–€â–€â–€"
i64="â–„â–„â–€â–€ â–€â–€ â–€â–€â–„â–„"

ESC=$(printf "")
f=3
b=4
for j in f b; do
  for i in {0..7}; do
    printf -v $j$i %b "${ESC}[${!j}${i}m "
  done
done
bld="${ESC}[1m"
rst="${ESC}[0m"

m1=$(( $RANDOM % 7 ))
m2=$(( $RANDOM % 7 ))
m3=$(( $RANDOM % 7 ))
m4=$(( $RANDOM % 7 ))
m5=$(( $RANDOM % 7 ))
m6=$(( $RANDOM % 7 ))
m7=$(( $RANDOM % 7 ))
m8=$(( $RANDOM % 7 ))
m9=$(( $RANDOM % 7 ))
m10=$(( $RANDOM % 7 ))
m11=$(( $RANDOM % 7 ))
m12=$(( $RANDOM % 7 ))

for x in {1..4}; do
  for y in {1..6}; do
    monster="m${y}"
    color="f${y}"
    slice="i${!monster}${x}"
    # echo -n "$x $y $monster ${!monster} $color $slice"
    echo -n "${!color} ${!slice} "
  done
  echo "$rst"
done
echo
for x in {1..4}; do
  echo -n "$bld"
  for y in {1..6}; do
    yy=$(( y + 6 ))
    monster="m${yy}"
    color="f${y}"
    slice="i${!monster}${x}"
    # echo -n "$x $y $monster ${!monster} $color $slice"
    echo -n "${!color} ${!slice} "
  done
  echo "$rst"
done

cat << EOF


                                     $f7 â–Œ$rst

                                   $f7 â–Œ$rst

                              $f7     â–„â–ˆâ–„    $rst
                              $f7 â–„â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–„$rst
                              $f7 â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€â–€$rst

EOF
