#!/bin/bash
trap exit SIGHUP SIGINT SIGTERM
pyflakes $@
pep8 $@
epylint $@ 2>&1 | grep -v '\*\*\*\*\*\*\*\*\*\*\*\*\* Module' | egrep -v '^Warning:' | sed 's/^ //'
pep257 $@ 2>&1
ag --nobreak --nocolor --noheading 'logging.(debug|info|warn|error|exception)' $@
isort -rc --check-only $@ | sed 's/^ERROR: //' | sed 's/ \(Imports are incorrectly sorted.\)/:0:0:\1/'
